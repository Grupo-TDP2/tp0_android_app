<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkGrey</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorText">@color/colorDarkGrey</item>
        <item name="backgroundRefresh">@color/colorBlack</item>
        <item name="android:icon">@drawable/ic_refresh_white</item>
        <item name="icon">@drawable/ic_refresh_white</item>
    </style>

    <style name="AppTheme.DayMode" >
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NightMode" >
        <!-- Customize your theme here. -->
        <item name="colorText">@color/colorWhite</item>
        <item name="backgroundRefresh">@color/colorWhite</item>
        <item name="android:icon">@drawable/ic_refresh</item>
        <item name="icon">@drawable/ic_refresh</item>
    </style>

    <style name="AppTheme.NoConnectivity" >
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
